@model Inventario
<h1>@(ViewContext.RouteData.Values["action"].ToString() == "Create" ? "Crear" : "Editar") Inventario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewContext.RouteData.Values["action"].ToString()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductoID" class="control-label"></label>
                <select asp-for="ProductoID" class="form-control" asp-items="ViewBag.ProductoId"></select>
                <span asp-validation-for="ProductoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
