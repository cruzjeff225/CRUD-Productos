@{
	ViewData["Title"] = "Delete";
}

@model CRUD_Productos.Models.Inventario

<h1>Eliminar Producto de Inventario</h1>

<h3>¿Estás seguro que deseas eliminar este producto del inventario?</h3>
<div>
	<hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
    </dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="ID" />
		<input type="submit" value="Eliminar" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
	</form>
</div>